{
  "name": "weather-worker",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./router": "./src/router.ts"
  },
  "scripts": {
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/handler.ts --format=esm",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name weather-worker",
    "deploy": "run-s build zip update",
    "dev": "tsx watch src/dev.ts",
    "interactive": "tsx -r dotenv/config --import ./src/interactive.ts"
  },
  "devDependencies": {
    "@hono/node-server": "^1.14.1",
    "@types/node": "^22.15.17",
    "dotenv": "^16.5.0",
    "esbuild": "^0.21.4",
    "npm-run-all2": "^6.2.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.5.0",
    "hono": "^4.7.8",
    "openweather-api-node": "^3.1.5",
    "typedash": "^3.2.5",
    "zod": "^3.24.4"
  }
}
